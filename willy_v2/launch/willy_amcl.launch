<?xml version="1.0"?>
<launch>
	<arg name = "init_x" default = "0" />
	<arg name = "init_y" default = "0" />
	<arg name = "init_a" default = "0" />
	<!--remap from = "map" to = "map_amcl"/-->

	<!--node pkg = "map_server" type = "map_server" name = "map" args = "$(find willy)/map/rudy_map.yaml" /-->
	<!--node pkg = "map_server" type = "map_server" name = "map" args = "$(find willy)/map/lab_map_amcl.yaml" /-->



	<node pkg="amcl" type="amcl" name="amcl" output="screen">
		<param name="min_particles" value="500"/>
		<param name="max_particles" value="5000"/>
				
		<!-- AMCLOdom -->
		<param name="odom_model_type" value="diff-corrected"/>
		<param name="odom_alpha1" value="0.5"/>	
		<param name="odom_alpha2" value="0.1"/>
		<param name="odom_alpha3" value="0.0005"/>
		<param name="odom_alpha4" value="0.005"/>


		<!-- AMCLLaser -->
		<param name="laser_min_range" value="0.2"/>
		<param name="laser_max_range" value="20.0"/>
		<param name="laser_max_beams" value="100"/>
 		<!-- Laser model type -->
        <param name="laser_model_type" value="likelihood_field"/>
 		<!-- LASER_MODEL_LIKELIHOOD_FIELD -->
 		<!-- z_hit + z_rand = 1, sigma_hit, laser_likelihood_max_dist_ -->
		<param name="laser_z_hit" value="0.9"/>
		<param name="laser_z_rand" value="0.1"/>
		<param name="laser_sigma_hit" value="0.1"/>
 		<param name="laser_likelihood_max_dist" value="4.0"/>
 		<!-- LASER_MODEL_BEAM -->
 		<!-- z_hit + z_short + z_max + z_rand = 1, sigma_hit, lambda_short -->
		<param name="laser_z_short" value="0.05"/>
		<param name="laser_z_max" value="0.2"/>
		<param name="laser_lambda_short" value="0.1"/>
 		<!-- LASER_MODEL_LIKELIHOOD_FIELD_PROB -->
 		<!-- z_hit + z_rand = 1, sigma_hit, laser_likelihood_max_dist_ -->

		
		<param name="update_min_d" value="0.1"/> <!-- 0.2 -->
		<param name="update_min_a" value="0.3"/> <!-- 0.5 -->
		<param name="resample_interval" value="1"/>
		<param name="recovery_alpha_slow" value="0.001"/>
		<param name="recovery_alpha_fast" value="0.1"/>
		<param name="kld_err" value="0.05"/> 
		<param name="kld_z" value="0.95"/>
	
		<param name="transform_tolerance" value="0.5"/>
		<param name="gui_publish_rate" value="10.0"/>
		<param name="use_map_topic" value="true"/>
		<param name="first_map_only" value="false"/>
		<param name="tf_broadcast" value="true"/>

		<param name="odom_frame_id" value="/odom"/>
		<param name="global_frame_id" value="/map"/>
		<param name="base_frame_id" value="/base_link"/>

		<param name="initial_pose_x" value="$(arg init_x)"/>
		<param name="initial_pose_y" value="$(arg init_y)"/>
		<param name="initial_pose_a" value="$(arg init_a)"/>
		<param name="initial_cov_xx" value="0.5"/>
		<param name="initial_cov_yy" value="0.05"/>
		<param name="initial_cov_aa" value="0.02"/>
	</node>

	<!--node pkg="rviz" type="rviz" name="rviz" args="-d $(find willy)/rviz/amcl.rviz" /-->
</launch>
